 <?xml version="1.0"?>
<!-- Open the main map module and specify the PGM protocol version it was created for. -->
<map proto="1.3.3">
<!-- Set the maps name and version. -->
<name>Frosty Shore</name>
<version>1.1.4</version>
<!-- Specify the game objective. -->
<objective>Break the enemy's team monument.</objective>
<!-- Credit the author of the map. --> 
<authors>
    <author>Ronan_Tempus</author> 
</authors>
<!-- Teams --> 
<teams>
    <team color="pink" max="16">Pink Team</team>
    <team color="lime" max="16">Lime Team</team>
</teams>
<!-- Kill reward  --> 
<killreward>
    <item amount="7">gold nugget</item>
</killreward>
<!-- Maxiumum build limit --> 
<maxbuildheight>81</maxbuildheight>
<!-- Pink team's spawn --> 
<spawns>
    <spawn team="pink" kit="pink" yaw="90">
        <union>
            <point yaw="24">226,46,-20</point>
            <point yaw="156">226,46,2</point>
        </union>
    </spawn> 
    <!-- Lime team's spawn --> 
    <spawn team="lime" kit="lime">
        <union>
            <point yaw="-156">29,46,58</point>
            <point yaw="-24">29,46,36</point>
        </union>
    </spawn>
    <!-- Observers' spawn --> 
    <default yaw="88">
        <union>
            <point yaw="71">129,87,76</point>
            <point yaw="107">129,87,82</point>
            <point yaw="-107">124,87,82</point>
            <point yaw="-71">124,87,76</point>
        </union>
    </default>
</spawns>
<!-- Destroyables --> 
<destroyables name="Monument" completion="100%" show-progress="true" materials="obsidian;emerald_block;beacon">
    <!-- The pink team's monument --> 
    <destroyable owner="pink">
        <cuboid min="214,55,-40" max="216,50,42" />
    </destroyable> 
    <!-- The lime team's monument -->  
    <destroyable owner="lime">
        <cuboid min="39,55,-4" max="41,50,-6" />
    </destroyable>
</destroyables>
<!-- Prevents ice from melting naturally --> 
<filters>
    <filter name="deny-icemelt">
        <not>
            <all>
             <!-- DENY if world and ice, ALLOW if not world, ABSTAIN if world and not ice-->
                <any><!-- ALLOW if world, DENY else -->
                    <filter name="allow-world" />
                    <filter name="deny-all" />
                </any>
                <block>ice</block><!-- ALLOW if ice, ABSTAIN else -->
            </all>
        </not>
    </filter>
</filters>
<!-- Specify regions --> 
<regions>
    <apply block="deny-players" message="Please don't break the spawns!">
        <!-- Pink team's spawn area -->
        <cuboid name="pink-spawn-area" min="227,46,5" max="219,100,-23" /> 
        <!-- Lime team's spawn area --> 
        <cuboid name="lime-spawn-area" min="27,46,33" max="36,100,61" />
    </apply>
    <!-- Build height limit --> 
    <apply block="deny-blocks" message="Don't build this high!">
        <negative>
            <cuboid name="above-81" min="-oo,-oo,-oo" max="oo,82,oo" />
        </negative>
    </apply>
    <!-- Playable region and deny icemelt --> 
    <apply block="deny-icemelt">
        <cuboid name="playable" min="28,13,69" max="277,81,-31" />  
    </apply>
    <apply block="deny-world"> 
        <negative>
            <region name="playable" />
        </negative>
    </apply> 
</regions>
<!-- Spawnkit --> 
<kits>
    <kit name="spawn">    
        <item slot="0">stone sword</item>
        <item slot="1" enchantment="arrow infinite:1">bow</item>
        <item slot="28">arrow</item>
        <item slot="2" enchantment="silk touch:1">diamond pickaxe</item>
        <item slot="3" amount="1">stone axe</item>
        <item slot="4" amount="64" damage="1">wood</item>
        <item slot="48" amount="1">stone spade</item>
        <item slot="5" amount="64" damage="1">wood</item>
        <item slot="6" amount="64">apple</item>
        <item slot="8" amount="1">bucket</item>
    </kit>
    <kit name="pink" parents="spawn">
        <chestplate color="F27FA5">leather chestplate</chestplate>
        <leggings>chainmail leggings</leggings>
        <boots>chainmail boots</boots>
    </kit>
        <kit name="lime" parents="spawn">
        <chestplate color="7FCC19">leather chestplate</chestplate>
        <leggings>chainmail leggings</leggings>
        <boots>chainmail boots</boots>
    </kit>
</kits>
<!-- Specify which items get repaired when dropped or when the player picks one up --> 
<toolrepair>
    <tool>stone sword</tool> 
    <tool>diamond pickaxe</tool>
    <tool>stone axe</tool>
    <tool>stone spade</tool> 
    <tool>bow</tool>
    <tool>arrow</tool>
</toolrepair>
<!-- Specify which items get removed when dropped --> 
<itemremove>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>chainmail boots</item>
    <item>obsidian</item>
    <item>emerald_block</item>
    <item>beacon</item>
</itemremove>
</map>
